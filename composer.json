{
    "name": "neonex/neoframework",
    "description": "NeoFramework - Modern PHP Full-Stack Framework with Metadata-Driven Development",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "laravel", "php", "cms", "metadata", "neo"],
    "homepage": "https://github.com/neonextechnologies/neoframework",
    "authors": [
        {
            "name": "Neonex Technologies",
            "email": "support@neonex.dev",
            "homepage": "https://neonex.dev"
        }
    ],
    "require": {
        "php": ">=8.0 <8.5",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "suggest": {
        "ext-pdo_mysql": "For MySQL database support",
        "ext-pdo_pgsql": "For PostgreSQL database support",
        "ext-pdo_sqlite": "For SQLite database support",
        "ext-pdo_sqlsrv": "For SQL Server database support",
        "mongodb/mongodb": "For MongoDB support",
        "predis/predis": "For Redis support"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "NeoPhp\\Core\\": "src/Core/",
            "NeoPhp\\Http\\": "src/Http/",
            "NeoPhp\\Routing\\": "src/Routing/",
            "NeoPhp\\Config\\": "src/Config/",
            "NeoPhp\\Container\\": "src/Container/",
            "NeoPhp\\Database\\": "src/Database/",
            "NeoPhp\\Console\\": "src/Console/",
            "NeoPhp\\View\\": "src/View/",
            "NeoPhp\\Validation\\": "src/Validation/",
            "NeoPhp\\Auth\\": "src/Auth/",
            "NeoPhp\\Cache\\": "src/Cache/",
            "NeoPhp\\Events\\": "src/Events/",
            "NeoPhp\\Queue\\": "src/Queue/",
            "NeoPhp\\Session\\": "src/Session/",
            "NeoPhp\\Logging\\": "src/Logging/",
            "NeoPhp\\Storage\\": "src/Storage/",
            "NeoPhp\\Performance\\": "src/Performance/",
            "NeoPhp\\Security\\": "src/Security/",
            "NeoPhp\\Mail\\": "src/Mail/",
            "NeoPhp\\Pagination\\": "src/Pagination/",
            "NeoPhp\\Schedule\\": "src/Schedule/",
            "NeoPhp\\Contracts\\": "src/Contracts/",
            "NeoPhp\\Foundation\\": "src/Foundation/",
            "NeoPhp\\Plugin\\": "src/Plugin/",
            "NeoPhp\\Metadata\\": "src/Metadata/",
            "NeoPhp\\Forms\\": "src/Forms/",
            "NeoPhp\\Generator\\": "src/Generator/",
            "App\\": "app/"
        },
        "files": [
            "src/helpers.php",
            "src/foundation_helpers.php"
        ]
    },
    "bin": [
        "neo"
    ],
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php neo app:key",
            "@php -r \"echo '\\n\\033[32mNeoFramework installed successfully!\\033[0m\\n';\"",
            "@php -r \"echo '\\033[33mNext steps:\\033[0m\\n';\"",
            "@php -r \"echo '  1. Configure .env file\\n';\"",
            "@php -r \"echo '  2. Run: php neo migrate\\n';\"",
            "@php -r \"echo '  3. Run: php neo serve\\n\\n';\""
        ],
        "post-autoload-dump": [
            "@php neo package:discover --ansi || true"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "*": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "prefer-stable": true
}
